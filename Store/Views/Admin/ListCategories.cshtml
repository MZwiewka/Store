@model IEnumerable<Category>

@{ ViewBag.Title = "All Categories";
    Layout = "_AdminLayout"; }


<table class="table table-striped table-bordered table-sm mt-3">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Category</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td class="text-right">@item.CategoryID</td>
    <td>@item.Name</td>
    <td class="text-right">@item.ParentCategoryID</td>
    <td class="text-center">
        <form asp-action="DeleteCategory" method="post">
            <a asp-action="EditCategory" class="btn btn-sm btn-warning"
               asp-route-productId="@item.CategoryID">
                Edit
            </a>
            <input type="hidden" name="CategoryID" value="@item.CategoryID" />
            <button type="submit" class="btn btn-danger btn-sm">
                Delete
            </button>
        </form>
    </td>
</tr>
}
</table>
<div class="text-center">
    <a asp-action="CreateCategory" class="btn btn-primary">Add Category</a>
</div>